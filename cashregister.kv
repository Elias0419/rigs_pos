<InventoryRow>:
    barcode: root.barcode
    name: root.name
    price: root.price

    Label:
        id: barcode
        text: root.barcode
    Label:
        id: name
        text: root.name
    Label:
        id: price
        text: root.price
    MDRaisedButton:
        text: "Add to Order"
        on_press: root.add_to_order()

<InventoryView>:
    orientation: 'vertical'
    rv: rv
    BoxLayout:
        size_hint_y: None
        height: '48dp'
        TextInput:
            id: search_input
            size_hint_x: 0.8
            hint_text: 'Search'
            on_text: root.filter_inventory(self.text)

    RecycleView:
        id: rv
        viewclass: 'InventoryRow'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
<LabelPrintingRow>:
    barcode: root.barcode
    name: root.name
    price: root.price

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'

        Label:
            id: barcode
            text: root.barcode
        Label:
            id: name
            text: root.name
        Label:
            id: price
            text: root.price
        MDRaisedButton:
            text: "Add to Queue"
            on_press: root.add_to_print_queue()

<LabelPrintingView>:
    orientation: 'vertical'
    rv: rv
    BoxLayout:
        size_hint_y: None
        height: '48dp'
        orientation: 'horizontal'

        TextInput:
            id: search_input
            size_hint_x: 0.8
            hint_text: 'Search'
            on_text: root.filter_inventory(self.text)

        MDRaisedButton:
            text: "Show Print Queue"
            size_hint_x: 0.2
            on_press: root.show_print_queue()

    RecycleView:
        id: rv
        viewclass: 'LabelPrintingRow'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<InventoryManagementRow>:
    barcode: root.barcode
    name: root.name
    price: root.price

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'

        Label:
            id: barcode
            text: root.barcode
        Label:
            id: name
            text: root.name
        Label:
            id: price
            text: root.price

        MDRaisedButton:
            text: "Details"
            on_press: root.open_inventory_manager()

<InventoryManagementView>:
    orientation: 'vertical'
    rv: rv
    BoxLayout:
        size_hint_y: None
        height: '48dp'
        orientation: 'horizontal'

        TextInput:
            id: search_input
            size_hint_x: 0.8
            hint_text: 'Search'
            on_text: root.filter_inventory(self.text)

        MDRaisedButton:
            text: "Add Item"
            size_hint_x: 0.2
            on_press: root.open_inventory_manager()



    RecycleView:
        id: rv
        viewclass: 'InventoryManagementRow'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'


<HistoryRow>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_x: 0.8

        Label:
            id: items
            text: root.items
        Label:
            id: total_with_tax
            text: root.total_with_tax
        Label:
            id: timestamp
            text: root.timestamp
    Button:
        size_hint_x: 0.2
        text: "Details"
        on_press: root.history_view.display_order_details(root.order_id)

<HistoryView>:
    orientation: 'vertical'
    rv: rv
    RecycleView:
        id: rv
        viewclass: 'HistoryRow'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
