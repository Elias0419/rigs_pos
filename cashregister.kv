<MDRaisedButton>:
    markup: True
<MarkupLabel>:
    markup: True
<MarkupButton>:
    markup: True
<MDLabel>:
    markup: True

<LabelPrintingRow>:
    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.x, self.y, self.x + self.width, self.y
            width: 1
    barcode: root.barcode
    name: root.name
    price: root.price

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        padding: 1,1,1,1

      #  Label:
       #     id: barcode
        #    text: root.barcode
        MDLabel:
            id: name
            text: root.name
            size_hint_x: 0.7
            halign: 'left'
            padding: 50,1,1,1
        Label:
            id: price
            text: root.price
            size_hint_x: 0.2
        Button:
            text: "Add to Queue"
            on_press: root.add_to_print_queue()
            size_hint_x: 0.1

<LabelPrintingView>:
    orientation: 'vertical'
    rv: label_rv
    BoxLayout:
        size_hint_y: None
        height: '48dp'
        orientation: 'horizontal'
        spacing: 5
        TextInput:
            id: label_search_input
            size_hint_x: 0.8
            hint_text: 'Search'
            on_text: root.filter_inventory(self.text, root.dual_pane_mode)
        MDRaisedButton:
            text: "Clear"
            size_hint: (0.2,1)
            on_press: root.clear_search()
        MDRaisedButton:
            text: "Show Print Queue"
            size_hint: (0.2,1)
            on_press: root.show_print_queue()

    RecycleView:
        id: label_rv
        viewclass: 'LabelPrintingRow'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: len(label_rv.data) * dp(56)
            #height: self.minimum_height
            orientation: 'vertical'




<DistRow>:
    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.x, self.y, self.x + self.width, self.y
            width: 1

    GridLayout:
        orientation: 'lr-tb'
        cols: 5


        Label:
            id: text
            text: root.text
            size_hint_x: 0.65
            text_size: self.size
            halign: "left"

        Label:
            id: secondary_text
            text: root.secondary_text
            size_hint_x: 0.1

        Label:
            id: item_name
            text: root.item_name
            size_hint_x: 0.15

        Label:
            id: price
            text: root.price_str
            size_hint_x: 0.1

        Label:
            id: notes
            text: root.notes
            size_hint_x: 0.15

    Button:
        size_hint_x: 0.1
        text: "Details"
        on_press: root.do_nothin()

<DistView>:
    orientation: 'vertical'
    RecycleView:
        id: dist_rv
        viewclass: 'DistRow'
        size_hint_x: 1
        RecycleBoxLayout:
            default_size: None, dp(32)
            default_size_hint: 1, None
            size_hint_y: None
            height: len(dist_rv.data) * dp(32)
            #height: self.minimum_height
            orientation: 'vertical'



