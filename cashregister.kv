<MDRaisedButton>:
    markup: True
<MarkupLabel>:
    markup: True
<MarkupButton>:
    markup: True
<MDLabel>:
    markup: True
<InventoryRow>:

    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.x, self.y, self.x + self.width, self.y
            width: 1
    barcode: root.barcode
    name: root.name
    price: root.price


    MarkupLabel:
        id: name
        text: root.formatted_name
        halign: 'left'

        text_size: self.size

    Label:
        id: price
        text: root.formatted_price
        size_hint_x: 0.2
    MDRaisedButton:
        text: "Add to Order"
        on_press: root.add_to_order()

<InventoryView>:
    orientation: 'vertical'

    rv: rv
    BoxLayout:
        size_hint_y: None
        height: '32dp'
        TextInput:
            id: label_search_input

            hint_text: 'Search'
            on_text: root.filter_inventory(self.text)

    RecycleView:
        id: rv
        viewclass: 'InventoryRow'
        RecycleBoxLayout:
            default_size: None, dp(40)
            default_size_hint: 1, None
            size_hint_y: None

            height: self.minimum_height
            orientation: 'vertical'
<LabelPrintingRow>:
    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.x, self.y, self.x + self.width, self.y
            width: 1
    barcode: root.barcode
    name: root.name
    price: root.price

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'

        Label:
            id: barcode
            text: root.barcode
        Label:
            id: name
            text: root.name
        Label:
            id: price
            text: root.price
        MDRaisedButton:
            text: "Add to Queue"
            on_press: root.add_to_print_queue()

<LabelPrintingView>:
    orientation: 'vertical'
    rv: label_rv
    BoxLayout:
        size_hint_y: None
        height: '48dp'
        orientation: 'horizontal'
        spacing: 5
        TextInput:
            id: label_search_input
            size_hint_x: 0.8
            hint_text: 'Search'
            on_text: root.filter_inventory(self.text)
        MDRaisedButton:
            text: "Clear"
            size_hint: (0.2,1)
            on_press: root.clear_search()
        MDRaisedButton:
            text: "Show Print Queue"
            size_hint: (0.2,1)
            on_press: root.show_print_queue()

    RecycleView:
        id: label_rv
        viewclass: 'LabelPrintingRow'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<PrintQueueRow>:
    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.x, self.y, self.x + self.width, self.y
            width: 1
    orientation: 'horizontal'
    #size_hint_y: None
    height: dp(48)
    spacing: 5

    Label:
        text: root.name
    Label:
        text: root.optional_text
        #size_hint_x: 1.5
        #text_size: self.size
        #halign: 'center'
        #valign: 'middle'
    BoxLayout:
        orientation: 'horizontal'
        #size_hint_x: None
        #width: dp(100)
        spacing: 10

        MDRaisedButton:
            text: "-"
            #width: dp(48)
            on_press: root.decrement_quantity()
        Label:
            text: root.quantity
            size_hint: (None,0.8)
            #size_hint_x: 0.3
            #width: dp(48)
        MDRaisedButton:
            text: "+"
            #width: dp(48)

            on_press: root.increment_quantity()
    MDRaisedButton:
        text: "Add Text"
        on_press: root.add_label_text()

    MDRaisedButton:
        text: "Remove"
        on_press: root.on_remove_button_press()

<LabelQueueLayout>:
    RecycleView:
        id: label_queue_rv
        size_hint: (1, 1)
        viewclass: 'PrintQueueRow'
        RecycleBoxLayout:
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
<InventoryManagementRow>:
    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.x, self.y, self.x + self.width, self.y
            width: 1
    barcode: root.barcode
    name: root.name
    price: root.formatted_price

    GridLayout:
        orientation: 'lr-tb'

        cols: 3

        Label:
            text_size: self.size
            halign: "left"
            size_hint_x: 0.8
            id: name
            text: root.name

        Label:
            halign: "left"
            size_hint_x: 0.2
            id: barcode
            text: root.barcode

        Label:
            halign: "left"
            size_hint_x: 0.2
            id: price
            text: root.price


    Button:
        text: "Details"
        size_hint_x: 0.1
        on_press: root.app.utilities.open_inventory_manager_row(root)

<InventoryManagementView>:
    orientation: 'vertical'
    rv: rv
    BoxLayout:
        size_hint_y: None
        height: '48dp'
        orientation: 'horizontal'
        spacing: 5
        size_hint_y: 0.1
        TextInput:
            id: inv_search_input
            size_hint_x: 0.8
            hint_text: 'Search'
            on_text: root.filter_inventory(self.text)
        MDRaisedButton:
            text: "Clear"
            size_hint: (0.2,1)
            #size_hint_x: 0.2
            on_press: root.clear_search()

        MDRaisedButton:
            text: "Add Item"
            size_hint: (0.2,1)
            #size_hint_x: 0.2
            on_press: root.open_inventory_manager()



    RecycleView:
        id: rv
        viewclass: 'InventoryManagementRow'
        RecycleBoxLayout:
            default_size: None, dp(40)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'


<HistoryRow>:
    canvas.after:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.x, self.y, self.x + self.width, self.y
            width: 1

    GridLayout:
        orientation: 'lr-tb'
        cols: 3

        Label:
            id: items
            text: root.items
            size_hint_x: 0.65
            text_size: self.size
            halign: "left"

        Label:
            id: total_with_tax
            text: root.total_with_tax
            size_hint_x: 0.1

        Label:
            id: timestamp
            text: root.timestamp
            size_hint_x: 0.15

    Button:
        size_hint_x: 0.1
        text: "Details"
        on_press: root.history_view.display_order_details(root.order_id)

<HistoryView>:
    orientation: 'vertical'
    RecycleView:
        id: history_rv
        viewclass: 'HistoryRow'
        size_hint_x: 1
        RecycleBoxLayout:
            default_size: None, dp(32)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'



